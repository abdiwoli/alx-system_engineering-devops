#!/usr/bin/python3
""" module """
import requests

def number_of_subscribers(subreddit):
    # Reddit API URL for fetching subreddit information
    api_url = f"https://www.reddit.com/r/{subreddit}/about.json"
    
    # Set a custom User-Agent to avoid errors related to Too Many Requests
    headers = {'User-Agent': 'CustomUserAgent/1.0'}
    
    try:
        # Make a GET request to the Reddit API
        response = requests.get(api_url, headers=headers)
        
        # Check if the request was successful (status code 200)
        if response.status_code == 200:
            # Parse the JSON response
            subreddit_info = response.json()
            
            # Extract and return the number of subscribers
            return subreddit_info['data']['subscribers']
        elif response.status_code == 404:
            # Return 0 if the subreddit is not found (invalid)
            return 0
        else:
            # Handle other error cases
            print(f"Error: {response.status_code} - {response.text}")
            return 0
    except Exception as e:
        # Handle any exceptions that may occur during the request
        print(f"Error: {e}")
        return 0

# Example usage:
subreddit_name = "python"
subscribers_count = number_of_subscribers(subreddit_name)
print(f"The number of subscribers in the '{subreddit_name}' subreddit is: {subscribers_count}")
