#!/usr/bin/env bash
# school file info
file_path="./school"

if [ -e "$file_path" ]; then
    echo "school file exists"

    if [ -f "$file_path" ]; then
        if [ -s "$file_path" ]; then
            echo "school file is not empty"
            echo "File size: $(du -h "$file_path" | cut -f1)"
        else
            echo "school file is empty"
        fi

    echo "school is a regular file"
    fi

else
    echo "school file does not exist"
fi
